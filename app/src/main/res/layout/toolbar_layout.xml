<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue">

    <RelativeLayout
        android:id="@+id/rlv_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/icon_search"
            android:layout_width="@dimen/tv_height"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/default_padding"
                android:src="@drawable/icon_search" />

        </FrameLayout>

        <EditText
            android:id="@+id/et_toolbar_search"
            android:layout_width="@dimen/et_width"
            android:layout_height="@dimen/tv_height"
            android:layout_marginRight="@dimen/default_padding"
            android:layout_toLeftOf="@id/icon_search"
            android:focusable="false"
            android:hint="@string/search"
            android:textColor="@color/white"
            android:textColorHint="@color/hint"
            android:textSize="@dimen/font_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlv_toolbar_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

</android.support.v7.widget.Toolbar>